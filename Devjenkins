pipeline {
    agent any

    stages {
        stage('Build') {

            steps {
                echo 'Building..'
                 script {
                    sh "docker run --rm -t -u \$(id -u):\$(id -g) -e NWN_HOME=\$(pwd) -v \$(pwd):\$(pwd) -v \$(pwd):/nasher cltalmadge/nasher:amia pack dev --clean --verbose --yes"
                    archiveArtifacts artifacts: 'AmiaDev.mod', followSymlinks: false
                }
            }
        }
    }
}
