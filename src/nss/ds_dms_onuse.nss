//-------------------------------------------------------------------------------
#include "inc_ds_dms"


//-------------------------------------------------------------------------------
// main
//-------------------------------------------------------------------------------

void main(){

    object oPC   = GetLastUsedBy();
    string sArea = GetTag( GetArea( oPC ) );
    string sSlot = GetTag( OBJECT_SELF );

    if ( sArea == "dms_items" ){

        StoreItems( oPC, sSlot );
    }
    else {

        StoreCritters( oPC, sSlot );
    }
}



