void main( ){

    // Variables.
    object oPC        = OBJECT_SELF;
    effect eKoloth    = EffectSummonCreature( "koloth", VFX_FNF_NATURES_BALANCE, 0.5);
    eKoloth           = SupernaturalEffect( eKoloth );
    location lKoloth  = GetLocation( oPC );

    ApplyEffectAtLocation( DURATION_TYPE_PERMANENT, eKoloth, lKoloth);

    return;
}
