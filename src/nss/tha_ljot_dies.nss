#include "inc_ds_records"


//-------------------------------------------------------------------------------
//main
//-------------------------------------------------------------------------------
void main(){

    object oPC  = GetLastKiller();
    int nQuest  = ds_quest( oPC, "tha_quest5" );

    if( nQuest == 1 || nQuest == 2 ){

        ds_quest( oPC, "tha_quest5", 3 );

        ExecuteScript( "ds_ai2_death", OBJECT_SELF );
    }
    else{

        SendMessageToPC( oPC, "OOC: this was not your quest." );

        SafeDestroyObject( OBJECT_SELF );
    }
}
